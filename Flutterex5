// main.dart
import 'package:flutter/material.dart';
import 'home_screen.dart';
import 'route_detail.dart';
import 'schedule_screen.dart';
void main() {
  runApp(const MyApp());
}
class MyApp extends StatelessWidget {
  const MyApp({super.key});
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Local Transport Scheduler',
      debugShowCheckedModeBanner: false,
      theme: ThemeData(
        colorScheme: ColorScheme.fromSeed(seedColor: Colors.indigo),
        useMaterial3: true,
      ),
      initialRoute: '/',
      routes: {
        '/': (context) => const HomeScreen(),
        '/details': (context) => const RouteDetail(),
        '/schedule': (context) => const ScheduleScreen(),
      }, );}}
// home_screen.dart
import 'package:flutter/material.dart';
class HomeScreen extends StatelessWidget {
  const HomeScreen({super.key});
  final List<Map<String, String>> routes = const [
    {"route": "Bus 101", "from": "Central Station", "to": "Airport"},
    {"route": "Metro Line 2", "from": "Downtown", "to": "Tech Park"},
    {"route": "Bus 204", "from": "City Mall", "to": "University"},
    {"route": "Train A1", "from": "Old Town", "to": "New City"},
  ];
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text("Local Transport Scheduler"),
        backgroundColor: Colors.indigo,
        foregroundColor: Colors.white,
      ),
      body: Padding(
        padding: const EdgeInsets.all(12.0),
        child: ListView.builder(
          itemCount: routes.length,
          itemBuilder: (context, index) {
            final route = routes[index];
            return Card(
              shape: RoundedRectangleBorder(
                borderRadius: BorderRadius.circular(15),
              ),
              elevation: 3,
              margin: const EdgeInsets.symmetric(vertical: 10),
              child: ListTile(
                title: Text(
                  route["route"]!,
                  style: const TextStyle(
                    fontSize: 18,
                    fontWeight: FontWeight.bold,
                  ),
                ),
                subtitle:
                    Text("From: ${route["from"]} â†’ To: ${route["to"]}"),
                trailing: ElevatedButton(
                  onPressed: () {
                    Navigator.pushNamed(
                      context,
                      '/details',
                      arguments: route,
                    );
                  },
                ),), ); },), ), ); }}
